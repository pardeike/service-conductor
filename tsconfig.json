{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"allowJs": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "./lib",
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"baseUrl": "./",
		"typeRoots": [
			"node_modules/@types"
		],
		"esModuleInterop": true
	},
	"include": [
		"src/**/*"
	]
}