{
	"name": "service-conductor",
	"version": "1.0.0-alpha5",
	"description": "Controlling micro services for testing purposes",
	"main": "lib/index.js",
	"types": "lib/index.d.js",
	"author": "Andreas Pardeike",
	"license": "MIT",
	"files": [
		"lib/**/*"
	],
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.19.0",
		"@typescript-eslint/parser": "^2.19.0",
		"eslint": "^6.8.0",
		"prettier": "^2.3.0",
		"typescript": "^4.1.2"
	},
	"scripts": {
		"lint": "npx eslint --fix --ext .ts src",
		"prebuild": "npm run lint",
		"clean": "rm -rf transformers",
		"build": "npx tsc",
		"format": "prettier --write \"src/**/*.ts\" \"lib/**/*.js\"",
		"prepare": "npm run build",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags"
	}
}